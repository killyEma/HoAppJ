<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ewikse.hoappj.MainActivity">

    <data>
        <variable
            name="coursesViewModel"
            type="com.ewikse.hoappj.CourseViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ProgressBar
            android:id="@+id/progress_courese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{coursesViewModel.courseProgress}"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:visibility="@{coursesViewModel.courseRecycler}"
            tools:listitem="@layout/course_row"/>

    </android.support.constraint.ConstraintLayout>

</layout>